<h1>Edit User</h1>

<%= form_with model: @user, url: user_path(@user), method: :patch, accept-charset: "UTF-8" do |form| %>
  <div>
    <%= form.label :username %>
    <%= form.text_field :username, value: @user.username %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.text_field :email, value: @user.email %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password, value: @user.password %>
  </div>

  <div>
    <%= form.submit "Update User" %>
  </div>
<% end %>
